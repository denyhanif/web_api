@{
}
@{
    Layout = "_Layout";
    ViewData["Title"] = "Index";
}

<div class="row">
    <button type="button" class="btn btn-primary m-4" data-toggle="modal" data-target="#exampleModal">
        <div class="row align-content-center pl-3 pr-3">
            <i class="fas fa-user-edit"></i>
            
        </div>
        
        
    </button>

    <div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-lg" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLabel">Modal title</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="addEmployee">
                    

                </div>
                <form>
                    <div class="modal-body">
                        <div class="row">
                            <div class="col-md-6">
                                <label for="FirstName">First Name</label>
                                <div class="input-group mb-3">
                                    <input type="text"  id="firstName" class="form-control" aria-describedby="basic-addon3">
                                </div>
                            </div>
                            <div class="col-md-6">
                                <label for="FirstName">Last Name</label>
                                <div class="input-group mb-3">
                                    <input type="text" id="lastName" class="form-control" aria-describedby="basic-addon3">
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6">
                                <label for="phone">Phone</label>

                                <div class="input-group mb-3">
                                    <input type="number" id="phone" class="form-control"  aria-describedby="basic-addon3">
                                </div>
                            </div>
                            <div class="col-md-6">
                                <label for="birthdate">Birth Date</label>
                                <div class="input-group mb-3">
                                    <input type="date" id="birthDate" class="form-control"  aria-describedby="basic-addon3">
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-4">
                                <label for="email">Email</label>

                                <div class="input-group mb-3">
                                    <input type="email" id="email" class="form-control" aria-describedby="basic-addon3">
                                </div>
                            </div>
                            <div class="col-md-4">
                                <label for="FirstName">Salary</label>

                                <div class="input-group mb-3">
                                    <input type="number" id="salary" class="form-control"  aria-describedby="basic-addon3">
                                </div>
                            </div>    
                            <div class="col-md-4">
                                <label for="FirstName">Gender</label>
                                <select id="gender" class="custom-select">
                                    <option value="0">Laki-laki</option>
                                    <option value="1">Perempuan</option>
                                </select>
                            </div>
                        </div>
                    </div>

                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary"  data-dismiss="modal">Close</button>
                        <button type="button" class="btn btn-primary" onclick="createEmployee()">Save changes</button>
                    </div>

                </form>
            </div>
        </div>
    </div>
</div>


<div class="">

    <table id="tableEmployee" class="table table-hover" style="width: 100%;">
        <thead class="thead-dark">
            <tr>

                <th width="10%">NO</th>

                <th>Nama</th>
                <th>Phone</th>
                <th>Salary</th>
                <th>Email</th>
                <th>Degree</th>
                <th>Role</th>
                <th>Action</th>

            </tr>
        </thead>
        <tbody class="text-capitalize">
        </tbody>
    </table>
</div>